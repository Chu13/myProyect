<h1> Add a new Trip </h1>

<% if(typeof errorMessage !== "undefined") { %>
  <p class="error-message">
  <%= errorMessage %>
  </p>
<% } %>


<form id="form" method="post" action="/trips">
  <label for="trip-place-input"> Place Name </label>
  <input id="trip-place-input" type="text" placeholder="e.g. Playa Caribe"
      name="placeName" />
  <br />

  <label for="trip-country-input"> Place Country </label>
  <input id="trip-country-input" type="text"
      placeholder=" e.g. Venezuela" name="placeCountry" />
  <br />

  <label for="trip-city-input"> Place City </label>
  <input id="trip-city-input" type="text"
      placeholder=" e.g. Margarita" name="placeCity" />
  <br />

  <label for="trip-image-input"> Image URL </label>
  <input id="trip-image-input" type="text"
    placeholder="e.g. https://example.com/paradise.gif" name="placeImage" />
  <br />

  <label for="trip-story-input"> Your Story </label>
  <textarea id="trip-story-input" placeholder="e.g. We had a great time....."
    name="placeStory"></textarea>
  <br />

  <button> Save this Trip </button>
</form>
